<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/card_home"
        android:gravity="top"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_location"
            android:padding="12dp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/img"
            android:fontFamily="@font/poppinsbold"
            android:paddingTop="-8dp"
            android:text="Belimbing, Malang"
            android:textColor="@color/color5"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt"
            android:layout_alignBottom="@+id/txt"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="-17dp"
            android:layout_toEndOf="@+id/img"
            android:fontFamily="@font/poppinsregular"
            android:text="range up to 200m"
            android:textColor="@color/textsamar"
            android:textSize="7sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ic_dropdown"
            android:padding="12dp" />

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_donatefood"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_donatefood"
        android:drawableStart="@drawable/dumno_foodimg"
        android:gravity="center"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sharefood"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_sharefood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_comunityfridge"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_comunityfridge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_getreward"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_getreward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />




</androidx.constraintlayout.widget.ConstraintLayout>