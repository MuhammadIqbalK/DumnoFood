<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".DonateFoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp"
            android:background="@color/white"
            android:elevation="20dp"
            >



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_btn"
                android:layout_marginVertical="25dp"
                android:layout_marginLeft="25dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Donate Food"
                android:textColor="@color/black"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Membantu yayasan atau perorangan
dengan membagikan makanan"
                android:textColor="@color/black"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="30dp">
            </TextView>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:background="@drawable/yayasan1_img"/>

            <ImageView
                android:id="@+id/img_btn1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/viewall_btn" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/location_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yayasan Peduli Bencana"
                android:textColor="@color/merah"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"


                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2.2 km"
                android:textColor="@color/black"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="30dp">
            </TextView>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:background="@drawable/yayasan2_img"/>

            <ImageView
                android:id="@+id/img_btn2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/viewall_btn" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/location_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:text="Panti Asuhan “Mutiara Kasih”"
                android:textColor="@color/merah"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4.7 km"
                android:textColor="@color/black"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="30dp">
            </TextView>




        </androidx.cardview.widget.CardView>

    </RelativeLayout>






</ScrollView>